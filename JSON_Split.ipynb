import json

input_file = 'yelp_academic_dataset_review.json'
Out_file = 'Split_file_'
num_files = 10

with open(input_file, 'r', encoding='utf8') as f:
    total_line = sum(1 for _ in f)
lines_per_file = total_line // num_files
print(f'Total lines: {total_line}, lines_per_file: {lines_per_file}')

with open(input_file, 'r', encoding='utf8') as f:
    for i in range(num_files):
        output_filename = f'{Out_file}{i}.json'
        with open(output_filename, 'w', encoding='utf8') as outfile:
            for j in range(lines_per_file):
                line = f.readline()
                if not line:
                    break
                outfile.write(line)
print("JSON file sucessfully Splited")
        
